<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nkssa.pnu_entrance_system.invite"
    tools:showIn="@layout/activity_invite"
    android:background="#fef6c8">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="if you would like to add a new visitor pleaes fill out the following form"
        android:id="@+id/textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rid"
        android:hint="enter your national id "
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_alignRight="@+id/register_name"
        android:layout_alignEnd="@+id/register_name"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_name"
        android:layout_below="@+id/rid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="visitor's Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/register_number"
        android:layout_below="@+id/register_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/register_name"
        android:hint="number of visits " />

    <Button
        android:onClick="register_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invite visitor"
        android:id="@+id/register_register"
        android:layout_below="@+id/register_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:onClick="invite_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/invite_register"
        android:layout_below="@+id/register_register"
        android:layout_alignRight="@+id/register_register"
        android:layout_alignEnd="@+id/register_register"
        android:layout_alignLeft="@+id/register_register"
        android:layout_alignStart="@+id/register_register" />


</RelativeLayout>